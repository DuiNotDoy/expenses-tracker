generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model User {
    id       String     @id @default(uuid())
    email    String     @unique
    name     String?
    Spending Spending[]
}

model Spending {
    id        String   @id @default(uuid())
    createdAt DateTime @default(now())
    item      String
    value     Decimal
    category  Category
    owner     User     @relation(fields: [ownerId], references: [id])
    ownerId   String
}

enum Category {
    utilities
    food
    mortgage
    personal
    medical
    transportation
    insurance
    recreation

}
