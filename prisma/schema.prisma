generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
    // relationMode = "prisma"
}

model Spending {
    id        String   @id @default(uuid())
    createdAt DateTime @default(now())
    item      String
    value     Decimal
    category  Category
    userId    String
}

enum Category {
    utilities
    food
    mortgage
    personal
    medical
    transportation
    insurance
    recreation
}
